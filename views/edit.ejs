<% include partials/header %>

<div class="container">
	<div clas="row">
		<h1 id="add-header">Edit "<%= art.title %>"</h1>
			<div id="add-form">
				<form action="/art/<%= art._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="art[titl]e" value="<%= art.title %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="art[image]" value="<%= art.image %>">
					</div>
					<div  class="form-group">
						<input class="form-control" type="text" name="art[description]" value="<%= art.description %>">
					</div>
					<div  class="form-group">
						<input class="form-control" type="text" name="art[artUrl]" value="<%= art.artUrl %>">
					</div>
					<div class="form-group">
						<button id="add-button" class="btn btn-lg btn-primary btn-block">Submit</button>
					</div>
				</form>
			</div>
	</div>
</div>

<% include partials/footer %>